{
  "name": "@modern-js/server-core",
  "description": "A Progressive React Framework for modern web development.",
  "homepage": "https://modernjs.dev",
  "bugs": "https://github.com/web-infra-dev/modern.js/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/web-infra-dev/modern.js",
    "directory": "packages/server/core"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "framework",
    "modern",
    "modern.js"
  ],
  "version": "2.60.0",
  "jsnext:source": "./src/index.ts",
  "types": "./dist/types/index.d.ts",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm-node/index.js",
      "default": "./dist/cjs/index.js"
    },
    "./node": {
      "types": "./dist/types/adapters/node/index.d.ts",
      "import": "./dist/esm-node/adapters/node/index.js",
      "default": "./dist/cjs/adapters/node/index.js"
    }
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist/types/index.d.ts"
      ],
      "node": [
        "./dist/types/adapters/node/index.d.ts"
      ]
    }
  },
  "engines": {
    "node": ">=16.2.0"
  },
  "dependencies": {
    "@swc/helpers": "0.5.13",
    "@web-std/fetch": "^4.2.1",
    "@web-std/file": "^3.0.3",
    "@web-std/stream": "^1.0.3",
    "flatted": "^3.2.9",
    "hono": "^3.12.2",
    "ts-deepmerge": "7.0.0",
    "@modern-js/plugin": "2.60.0",
    "@modern-js/runtime-utils": "2.60.0",
    "@modern-js/utils": "2.60.0"
  },
  "devDependencies": {
    "@types/jest": "^29",
    "@types/merge-deep": "^3.0.0",
    "@types/node": "^14",
    "http-proxy-middleware": "^2.0.4",
    "jest": "^29",
    "ts-jest": "^29.1.0",
    "typescript": "^5",
    "@modern-js/types": "2.60.0",
    "@scripts/build": "2.60.0",
    "@scripts/jest-config": "2.60.0"
  },
  "sideEffects": false,
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "new": "modern-lib new",
    "dev": "modern-lib build --watch",
    "build": "modern-lib build",
    "test": "jest --passWithNoTests"
  }
}